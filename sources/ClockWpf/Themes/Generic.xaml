<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DustInTheWind.ClockWpf"
    xmlns:shapes="clr-namespace:DustInTheWind.ClockWpf.Shapes">

    <Style TargetType="{x:Type local:AnalogClock}">
        <Setter Property="Background" Value="Transparent"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AnalogClock}">
                    <Border Background="{TemplateBinding Background}">

                        <shapes:ShapeCanvas
                            Shapes="{TemplateBinding Shapes}"
                            KeepProportions="{TemplateBinding KeepProportions}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>