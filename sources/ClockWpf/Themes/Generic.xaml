<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DustInTheWind.ClockWpf"
    xmlns:shapes="clr-namespace:DustInTheWind.ClockWpf.Shapes">

    <Style TargetType="{x:Type local:AnalogClock}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AnalogClock}">
                    <Viewbox>
                        <Border
                            Background="{TemplateBinding Background}">

                            <shapes:ShapeCanvas
                                x:Name="PART_ShapeCanvas"
                                Width="200"
                                Height="200"
                                Shapes="{TemplateBinding Shapes}"
                                KeepProportions="{TemplateBinding KeepProportions}"/>

                        </Border>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>