<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="OverlayButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Viewbox
                        x:Name="PART_Container"
                        Opacity="0.5">

                        <Grid
                            Width="100"
                            Height="100">

                            <Path
                                x:Name="PART_BackgroundPath"
							    Data="M 0,0 A 2,2 0 0 1 1,1 L 1,0 Z"
                                Fill="#909090"
                                Stroke="#909090"
                                StrokeThickness="10"
                                StrokeLineJoin="Round"
                                Stretch="Fill"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>

                            <ContentPresenter
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="10"
                                IsHitTestVisible="False"/>

                        </Grid>
                    </Viewbox>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Container" Property="Opacity" Value="1"/>
                            <Setter TargetName="PART_BackgroundPath" Property="Fill" Value="OrangeRed"/>
                            <Setter TargetName="PART_BackgroundPath" Property="Stroke" Value="OrangeRed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="OverlayThumbStyle" TargetType="Thumb">
        <Setter Property="Cursor" Value="SizeNWSE" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Bottom" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Viewbox
                        x:Name="PART_Container"
                        Opacity="0.5">

                        <Grid
                            Width="100"
                            Height="100">

                            <Path
                                x:Name="PART_BackgroundPath"
							    Data="M 0,1 A 2,2 0 0 0 1,0 L 1,1 Z"
							    Fill="#909090"
							    Stroke="#909090"
							    StrokeThickness="10"
							    StrokeLineJoin="Round"
							    Stretch="Fill"
							    HorizontalAlignment="Stretch"
							    VerticalAlignment="Stretch"/>

                            <Path
							    Data="M 0,20 L 20,0 M 8,20 L 20,8 M 16,20 L 20,16"
							    Stroke="WhiteSmoke"
							    StrokeThickness="2"
							    StrokeStartLineCap="Round"
							    StrokeEndLineCap="Round"
							    HorizontalAlignment="Right"
							    VerticalAlignment="Bottom"
							    Margin="10"
							    IsHitTestVisible="False"/>
                        </Grid>
                    </Viewbox>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Container" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
